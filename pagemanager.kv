<LoginForm>:
    email: email
    passw: passw

    FloatLayout:

        Label:
            text: "Placeholder Logo"
            font_size: (root.width**2 + root.height**2) / 12**4
            font_name: "Arialbd"
            pos_hint: {"x":0.2,"y":0.8}
            size_hint: 0.6, 0.1

        Label:
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.7}
            size_hint: 0.35, 0.15
        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.6725}
            size_hint: 0.35,0.08
            multiline: False

        Label:
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.6}
            size_hint: 0.35, 0.15
        TextInput:
            id: passw
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.5725}
            size_hint: 0.35,0.08
            multiline: False
            password: True

        Button:
            text: "Create an Account"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.2,"y":0.3}
            size_hint: 0.6, 0.1
            on_release: 
                app.root.current = "registration"
                root.manager.transition.direction = "left"

        Button:
            text: "Login"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            on_release: 
                root.submit()
                if (root.userType == "client"): \
                app.root.current = "chomepage"; \
                root.manager.transition.direction = "down" 
                elif (root.userType == "ruser"): \
                app.root.current = "ehomepage"; \
                root.manager.transition.direction = "down" 
                elif (root.userType == "admin"): \
                app.root.current = "ahomepage"; \
                root.manager.transition.direction = "down" 


