<EmailPopup@Popup>:
    title: "Email Popup"
    size_hint: (None, None)
    size: (400,200)
    auto_dismiss: False
    FloatLayout:
        Label:
            pos_hint: {'x': 0.028, 'center_y':0.8}
            size_hint: 0.35,0.08
            text: "New Email:"
        TextInput:
            id: email
            pos_hint: {'x': 0.1, 'center_y':0.6}
            size_hint: 0.8, 0.25
            multiline: False
        Button:
            text: "Cancel"
            pos_hint: {"center_x":0.65,"center_y":0.15}
            size_hint: 0.25, 0.2
            on_release:
                root.dismiss()
        Button:
            text: "Submit Changes"
            pos_hint: {"center_x":0.35,"center_y":0.15}
            size_hint: 0.35, 0.2
            on_release:
                root.dismiss()


