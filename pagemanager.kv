                        text: "Equipment No."
                    Label:
                        text: "Amount"
                    Label:
                        text: "Condition"
                GridLayout:
                    cols: 1
                    rows: 1
                    size_hint_y: 0.96
                    RecycleView:
                        id: equipment
                        viewclass: 'ThreeFieldLine'
                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
